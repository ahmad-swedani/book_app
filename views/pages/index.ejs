                <link rel="stylesheet" href="/base.css">
                <link rel="stylesheet" href="/modules.css">
                <link rel="stylesheet" href="/layout.css">
    </head>
    <body>
        <header>
            <nav>
                <section class="container" onclick="myFunction(this)">
                    <div class="bar1"></div>
                    <div class="bar2"></div>
                    <div class="bar3"></div>
                </section>
                <h1>best Book</h1>
            </nav>
        </header>
        <div id="menu">
            <ul>
                <li class="options"><a href="/">Home</a></li>
                <li class="options"><a href="/search/new">Search</a></li>
            </ul>
        </div>
        <main>
            <div id="mainWraper">
                <% booksResult.forEach (book => {  %>
                    <section class="bookSec">
                        <img class="bookCover" src="<%= book.bookimage %>" alt="">
                        <h2 class="bookTitle"><%= book.bookname %></h2>
                        <p class="bookAuthor"><%= book.bookauthor %></p>
                        <textarea class="desc"><%= book.bookdesc %></textarea>
                        <a href="/book/<%= book.id %>"> see more details</a>
                    </section>
                <% }) %>
            </div>
    </main>
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="/js/app.js"></script>
    </body>
</html>